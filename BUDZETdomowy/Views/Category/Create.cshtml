@model HomeBudget.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label">Icon</label>
                <div>
                    <select asp-for="Icon" class="form-control" id="iconSelect">
                        <option value="">Select Icon</option>
                        <option value="&#127881">&#127881</option> <!-- party -->
                        <option value="&#x1F3E0">&#x1F3E0</option> <!-- dom -->
                        <option value="&#x1F3C4;">&#x1F3C4;</option> <!-- wakacje -->
                        <option value="&#x1F6CD;&#xFE0F">&#x1F6CD;&#xFE0F</option> <!-- zakupy -->
                        <option value="&#x1F354">&#x1F354</option> <!-- jedzenie -->
                    </select>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type</label>
                <div>
                    <label class="radio-inline">
                        <input type="radio" asp-for="Type" value="Expense" checked /> Expense
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="Type" value="Income" /> Income
                    </label>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
