@model HomeBudget.Models.Account

@{
    ViewData["Title"] = "Create New Account";
}

<h1 class="display-4 mt-4 mb-4 text-center">Create Account</h1>
<hr></hr>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label">Name</label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Note" class="form-label">Note</label>
                            <input asp-for="Note" class="form-control" placeholder="Enter a note (optional)" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Income" class="form-label">Income</label>
                            <input asp-for="Income" class="form-control" type="number" step="0.01" placeholder="Enter start income" />
                            <span asp-validation-for="Income" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrencyId" class="form-label">Currency</label>
                            <select asp-for="CurrencyId" class="form-select" asp-items="@(new SelectList(ViewBag.Currencies, "Id", "Code"))"></select>
                            <span asp-validation-for="CurrencyId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between custom-buttons">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
