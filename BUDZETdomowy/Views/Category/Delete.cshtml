@model HomeBudget.Models.Category

@{
    ViewData["Title"] = "Deleting category";
}

<h1 class="display-4">Delete category</h1>

<h3>Are you sure you want to delete this?</h3>
<h3>Deleting a category will also remove the rest of the things associated with it.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10" style="font-size: 30px;">
            @Html.Raw(Model.Icon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 10px;" /> |
            <a asp-action="Index" class="btn btn-secondary ml-2" style="margin-left: 10px;">Back to List</a>
        </div>
    </form>
</div>
