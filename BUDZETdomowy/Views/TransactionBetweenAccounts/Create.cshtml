@model BUDZETdomowy.Models.TransactionBetweenAccounts

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransactionBetweenAccounts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SenderId" class="control-label"></label>
                <select asp-for="SenderId" class="form-control">
                    @foreach (var senderAccount in ViewBag.Accounts)
                    {
                        if (senderAccount.AccountId != 0) // Sprawdzenie, czy kategoria nie jest domyślna
                        {
                            string accountInfo = $"{senderAccount.AccountName} - {senderAccount.Income}";
                            <option value="@senderAccount.AccountId">@accountInfo</option>
                        }
                        else
                        {
                            <option value="@senderAccount.AccountId">@senderAccount.AccountName</option>
                        }
                    }
                </select>
                <span asp-validation-for="SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientId" class="control-label"></label>
                <select asp-for="RecipientId" class="form-control">
                    @foreach (var recipientAccount in ViewBag.Accounts)
                    {
                        if (recipientAccount.AccountId != 0)
                        {
                            string accountInfo = $"{recipientAccount.AccountName} - {recipientAccount.Income}";
                            <option value="@recipientAccount.AccountId">@accountInfo</option>
                        }
                        else
                        {
                            <option value="@recipientAccount.AccountId">@recipientAccount.AccountName</option>
                        }
                    }
                </select>
                <span asp-validation-for="RecipientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
