@model HomeBudget.Models.Account

@{
    ViewData["Title"] = "Deleting account";
}

<h1 class="display-4">Delete Account</h1>

<h3>Are you sure you want to delete this?</h3>
<h3>Deleting an account will also remove the rest of the things associated with it.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Income)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Income)
        </dd>
        <dt class = "col-sm-2">
            Expense
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expanse)
        </dd>
        <dt class="col-sm-2">
            Currency
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Code)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 10px;" /> |
            <a asp-action="Index" class="btn btn-secondary ml-2" style="margin-left: 10px;">Back to List</a>
        </div>
    </form>
</div>
