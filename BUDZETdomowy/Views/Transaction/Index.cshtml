@model IEnumerable<HomeBudget.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<!--ladujemy biblioteke stylizacji-->
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<h1>Index</h1>

<div class="text-center">
    <form method="post" asp-controller="Transaction" asp-action="ExportToCSV">
        <input type="submit" value="Export data to CSV"></input>
    </form>
</div>

<p></p>

<div class="text-center">
    <form method="post" asp-controller="Transaction" asp-action="ExportToExcel">
        <input type="submit" value="Export data to Excel"></input>
    </form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table" id="transactionsTable">
    <thead>
        <tr>
            <th>Category</th>
            <th>Account</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Note</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Raw(item.Category.Icon) @Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Account.AccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Currency.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!--uzywamy jQuery aby poczekac na zaladowanie dokumentu i nastepnie wywolac funkcje datatable na identyfikatorze 'transactionsTable'-->
@section Scripts {
    <!--ladujemy biblioteke ktora dostarcza funkcji do interakcji z tabela-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#transactionsTable').DataTable();
        });
    </script>
}
